// vercel.json
{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/node"
    },
    {
      "src": "app/**/page.tsx",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/api/upload",
      "dest": "/app/api/upload/routes.ts"
    },
    {
      "src": "/api/auth",
      "dest": "/app/api/auth/*"
    }
  ]
}
